{
    "manifest_version": 3,
    "name": "extension",
    "version": "1.0",
    "description": "Revisit random LeetCode problems for repeated revision until marked as clear.",
    "permissions": ["storage", "alarms", "notifications","identity"],
    "host_permissions": ["https://leetcode.com/*"],
    "web_accessible_resources": [
    {
        "resources": ["problems.json"],
        "matches": ["https://leetcode.com/*"]
    }
],
    "oauth2": {
    "client_id": "828974922958-4ls5q2puoi03tdffbc6bmqgd3is768j6.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "email",
      "profile",
        "https://www.googleapis.com/auth/userinfo.profile",
    "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}

 







